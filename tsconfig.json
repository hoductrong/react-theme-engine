{
  
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
